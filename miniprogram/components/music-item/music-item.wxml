<view class="flex items-center px-2.5 h-14 mb-2 rounded-md cursor-pointer transition-all bg-white dark:bg-gray-800/20">
  <view class="w-8 h-8 rounded-md flex items-center justify-center bg-gray-100 text-gray-500 dark:bg-gray-700/20 dark:text-gray-400">
    <image wx:if="{{cover}}" class="w-8 h-8 rounded-md" src="{{cover}}" />
    <image wx:else class="w-4 h-4 invert-icon" src="/assets/icon/{{icon || 'zhuanji'}}.svg" />
  </view>
  <view class="flex-1 min-w-0 ml-3">
    <view class="flex">
      <view class="font-medium truncate text-sm">{{title}}</view>
      <view wx:if="{{subTitle}}" class="ml-1 text-xs leading-relaxed truncate text-gray-500 dark:text-gray-400">{{subTitle}}</view>
    </view>
    <view wx:if="{{description}}" class="text-xs truncate text-gray-500 dark:text-gray-400">
      {{description}}
    </view>
  </view>
  <view wx:if="{{operation}}" class="w-8 h-8 flex items-center justify-end" catch:tap="handleOperation">
    <image class="w-4 h-4 invert-icon opacity-40 dark:opacity-60" src="/assets/icon/gengduocaozuo.svg" />
  </view>
</view>